{
  "name": "euclidean-rhythms",
  "version": "0.0.0-semantically-released",
  "description": "Calculates the patterns based on the euclidean/bjorklund's algorithm",
  "main": "src/index.js",
  "scripts": {
    "lint": "jshint src/*.js",
    "watch:test": "mocha src/*.test.js -w",
    "test": "istanbul cover -x *.test.js _mocha -- -R spec src/*.test.js",
    "check-coverage": "istanbul check-coverage --statements 100 --branches 100 --functions 100",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "prebuild": "rimraf dist",
    "build:umd": "webpack --output-filename bundle.umd.js",
    "build:umd.min": "webpack --output-filename bundle.umd.min.js -p",
    "build": "npm-run-all lint test check-coverage --parallel build:*",
    "commit": "git-cz ",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mkontogiannis/euclidean-rhythms.git"
  },
  "keywords": [
    "euclidean",
    "rhythms",
    "euclid",
    "bjorklund",
    "Godfried Toussaint"
  ],
  "author": "Michael Kontogiannis <mike@kontogiannis.io> (http://m.kontogiannis.io/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mkontogiannis/euclidean-rhythms/issues"
  },
  "homepage": "https://github.com/mkontogiannis/euclidean-rhythms#readme",
  "dependencies": {},
  "devDependencies": {
    "chai": "3.5.0",
    "codecov.io": "0.1.6",
    "commitizen": "2.8.6",
    "cz-conventional-changelog": "1.2.0",
    "ghooks": "1.3.2",
    "istanbul": "0.4.5",
    "jshint": "2.9.4",
    "mocha": "3.1.2",
    "npm-run-all": "3.1.1",
    "rimraf": "2.5.4",
    "semantic-release": "^4.3.5",
    "webpack": "1.13.3"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run build"
    }
  }
}
